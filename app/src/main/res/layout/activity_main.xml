<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.style.hxc.apptest.MainActivity">

    <com.style.hxc.libtest.TextViewTest
        android:id="@+id/tvTest"

        android:text="TextViewTest"
        app:showText="true"
        app:labelPosition="left"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <com.style.hxc.libnavcontroller.NavController
        android:id="@+id/btnNavCtrl"
        android:paddingTop="80dp"
        android:paddingBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.style.hxc.libnavcontroller.NavControllerEx
        android:layout_below="@id/btnNavCtrl"
        android:id="@+id/btnNav"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>
</LinearLayout>
